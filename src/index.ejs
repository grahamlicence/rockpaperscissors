<!doctype html>
<html>
<head>
	<title>Rock - Paper - Scissors</title>
	<meta charset="UTF-8">
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <script>document.documentElement.className = 'js';</script>
</head>
<body>
	<main class="game game--type2">
        <h1>Rock, Paper, Scissors</h1>

        <div class="game__type">
            <button class="game__button game__button--1" data-type="pvp">Player vs Player</button>
            <button class="game__button game__button--2" data-type="pvc">Player vs Computer</button>
            <button class="game__button game__button--3" data-type="cvc">Computer vs Computer</button>
        </div>

        <form class="game__arena" action="/play-game" method="post">
            <div class="status">
                <p class="status__score"></p>
                <p class="status__round"></p>
                <p class="status__winner"></p>
            </div>

            <div class="player1">
                <p>Player1</p>
                <div class="player1__options">
                    <label class="option1">
                        Rock
                        <input type="checkbox" class="option" value="rock" />
                    </label>
                    <label class="option2">
                        Paper
                        <input type="checkbox" class="option" value="paper" />
                    </label>
                    <label class="option3">
                        Scissors
                        <input type="checkbox" class="option" value="scissors" />
                    </label>
                </div>
            </div>

            <div class="player2">
                <p>Player2</p>
                <div class="player2__options">
                    <label class="option1">
                        Rock
                        <input type="checkbox" class="option" value="rock" />
                    </label>
                    <label class="option2">
                        Paper
                        <input type="checkbox" class="option" value="paper" />
                    </label>
                    <label class="option3">
                        Scissors
                        <input type="checkbox" class="option" value="scissors" />
                    </label>
                </div>
            </div>

            <button class="game__restart" type="submit">Restart game</button>

            <!-- allows for on js play of game, displays error if more than 1 option selected -->
            <button class="game__submit" type="submit">Play game</button>

            <div class="status">
                <div class="status__moves"></div>
            </div>
        </form>
    </main>
</body>
</html>
